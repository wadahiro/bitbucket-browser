{
  "name": "bitbucket-browser",
  "version": "0.5.0",
  "description": "",
  "main": "public/js/app.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "postinstall": "typings install",
    "build:dll": "webpack --config=webpack/webpack.dll.js",
    "build:style": "cp -r node_modules/font-awesome/fonts public && node-sass src/css/main.scss public/css/style.css",
    "build:html": "useref src/index.html public/index.html --js uglify --css uglify",
    "build:script": "cross-env webpack --config webpack/webpack.config.js",
    "build:assets": "npm run build:dll && npm run build:style && npm run build:html",
    "build": "cross-env NODE_ENV=production npm run build:assets && cross-env NODE_ENV=production npm run build:script",
    "dist": "npm run build && rm -rf dist && mkdir dist && cp -rap public dist/bitbucket-browser && cp settings.json.sample dist/bitbucket-browser/settings.json && tar -C dist -cvzf dist/bitbucket-browser.tar.gz bitbucket-browser",
    "server": "node-dev test-server.js",
    "start": "npm run build:assets && node-dev webpack/webpack.server.js"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^0.17.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-3": "^6.5.0",
    "cross-env": "^1.0.8",
    "express": "^4.13.3",
    "happypack": "^2.1.1",
    "node-dev": "^3.0.0",
    "node-sass": "^3.6.0",
    "react-hot-loader": "^1.3.0",
    "react-transform-hmr": "^1.0.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "ts-loader": "^0.8.2",
    "tslint": "^3.1.1",
    "typescript": "^2.0.0",
    "useref-file": "^0.2.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "bulma": "0.0.26",
    "font-awesome": "^4.6.1",
    "lodash": "^4.12.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-redux": "^4.4.5",
    "react-select": "^0.9.1",
    "react-sidebar": "^2.1.2",
    "redux": "^3.5.2",
    "redux-saga": "^0.11.0",
    "reselect": "^2.5.1",
    "whatwg-fetch": "^0.10.1"
  }
}
